{
  "name": "brighterscript-formatter",
  "version": "1.0.0",
  "description": "A formatter for BrighterScript, a superset of Roku's BrightScript language, written in JavaScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preversion": "npm run build && npm run lint && npm run test",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "lint": "tslint --project ./tsconfig.json",
    "test": "nyc mocha src/**/*.spec.ts --full-trace",
    "test:nocoverage": "mocha -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "format-github": "ts-node test-format.ts"
  },
  "files": [
    "dist/**/*"
  ],
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RokuCommunity/brighterscript-formatter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RokuCommunity/brighterscript-formatter/issues"
  },
  "homepage": "https://github.com/RokuCommunity/brighterscript-formatter#readme",
  "dependencies": {
    "brightscript-parser": "1.2.0",
    "child-process-promise": "^2.2.1",
    "fs-extra": "^8.1.0",
    "glob-promise": "^3.4.0",
    "trim-right": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/fs-extra": "^7.0.0",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^5.0.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.3",
    "ts-node": "^8.2.0",
    "tslint": "^5.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^3.3.4000"
  }
}
