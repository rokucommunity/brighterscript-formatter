{
    "name": "brighterscript-formatter",
    "version": "1.6.8",
    "description": "A formatter for BrighterScript, a superset of Roku's BrightScript language, written in JavaScript",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "preversion": "npm run build && npm run lint && npm run test",
        "build": "rimraf dist && tsc",
        "prepublishOnly": "npm run build && npm run test && npm run lint",
        "lint": "eslint \"src/**\"",
        "test": "nyc mocha src/**/*.spec.ts --full-trace",
        "test:nocoverage": "mocha -r ts-node/register src/**/*.spec.ts",
        "publish-coverage": "nyc report --reporter=text-lcov | coveralls",
        "format-github": "ts-node scripts/format-github.ts",
        "format-github-compare": "ts-node scripts/format-github.ts --compare",
        "cli": "SET TS_NODE_TYPE_CHECK=false && ts-node src/cli.ts"
    },
    "bin": {
        "bsfmt": "dist/cli.js",
        "brighterscript-formatter": "dist/cli.js"
    },
    "dependencies": {
        "brighterscript": "^0.45.0",
        "glob-all": "^3.2.1",
        "jsonc-parser": "^3.0.0",
        "source-map": "^0.7.3",
        "yargs": "^17.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/sinon": "^10.0.6",
        "@types/yargs": "^17.0.4",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "chai": "^4.3.4",
        "child-process-promise": "^2.2.1",
        "coveralls": "^3.1.1",
        "eslint": "^8.1.0",
        "fs-extra": "^10.0.0",
        "glob-promise": "^4.2.2",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "sinon": "^11.1.2",
        "source-map-support": "^0.5.20",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "files": [
        "dist/**/*",
        "bsfmt.schema.json"
    ],
    "nyc": {
        "include": [
            "src/**/!(*.spec).ts"
        ],
        "exclude": [
            "src/cli.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "check-coverage": true,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RokuCommunity/brighterscript-formatter.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/RokuCommunity/brighterscript-formatter/issues"
    },
    "homepage": "https://github.com/RokuCommunity/brighterscript-formatter#readme"
}
